{
  "name": "Vicreo-Listener",
  "productName": "vicreo listener",
  "version": "2.0.7",
  "description": "Keyboard ",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "devstart": "electromon ./src/index.js",
    "rebuild": "electron-rebuild -f -w ./src/index.js"
  },
  "keywords": [
    "keyboard emulator",
    "hotkey"
  ],
  "author": {
    "name": "Jeffrey Davidsz",
    "email": "jeffrey.davidsz@vicreo.eu"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "JeffreyDavidsz",
              "name": "VICREO-Listener"
            },
            "prerelease": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "vicreo_listener_forge"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "node-osascript": "^2.1.0",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.51",
    "@electron-forge/maker-deb": "6.0.0-beta.51",
    "@electron-forge/maker-rpm": "6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "6.0.0-beta.51",
    "@electron-forge/maker-zip": "6.0.0-beta.51",
    "electromon": "^1.0.10",
    "electron": "9.0.4",
    "electron-rebuild": "^1.11.0"
  }
}
